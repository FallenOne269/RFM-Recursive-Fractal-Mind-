{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RFAI Configuration",
  "type": "object",
  "required": [
    "fractal_engine",
    "swarm_coordinator",
    "quantum_processor",
    "meta_learner",
    "persistence"
  ],
  "properties": {
    "fractal_engine": {
      "type": "object",
      "required": ["max_depth", "base_dimensions", "noise_scale"],
      "properties": {
        "max_depth": {"type": "integer", "minimum": 1, "maximum": 10},
        "base_dimensions": {"type": "integer", "minimum": 1},
        "noise_scale": {"type": "number", "minimum": 0.0, "maximum": 1.0}
      }
    },
    "swarm_coordinator": {
      "type": "object",
      "required": ["swarm_size", "max_parallel_tasks"],
      "properties": {
        "swarm_size": {"type": "integer", "minimum": 1},
        "max_parallel_tasks": {"type": "integer", "minimum": 1}
      }
    },
    "quantum_processor": {
      "type": "object",
      "required": ["enabled", "qubit_count", "sampling_runs"],
      "properties": {
        "enabled": {"type": "boolean"},
        "qubit_count": {"type": "integer", "minimum": 0},
        "sampling_runs": {"type": "integer", "minimum": 1}
      }
    },
    "meta_learner": {
      "type": "object",
      "required": ["base_learning_rate", "adaptation_factor", "performance_threshold"],
      "properties": {
        "base_learning_rate": {"type": "number", "exclusiveMinimum": 0.0},
        "adaptation_factor": {"type": "number", "exclusiveMinimum": 1.0},
        "performance_threshold": {"type": "number", "minimum": 0.0, "maximum": 1.0}
      }
    },
    "persistence": {
      "type": "object",
      "required": ["state_dir", "version"],
      "properties": {
        "state_dir": {"type": "string", "minLength": 1},
        "version": {"type": "string", "minLength": 1}
      }
    }
  },
  "additionalProperties": false
}

        "fractal_id": "string"
      },
      "payload": {
        "sub": "user_id",
        "iss": "rz-os.system",
        "aud": "api.rz-os.core",
        "exp": "timestamp",
        "iat": "timestamp",
        "scope": "array",
        "consciousness_level": "integer",
        "ethical_clearance": "object"
      }
    }
  },
  "encryption": {
    "transport": "TLS 1.3",
